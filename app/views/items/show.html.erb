<%= render 'users/ura_header' %>
<div class="container">
 <div class="border" style="container">
	<div class="row">
		<div class="col-xs-2">
		  <div style="width: 100%; height: 750px;">
						<table class="table table-bordered">
							<thead>
								<tr>
									<th>
										<h5>ジャンル検索</h5>
									</th>
								</tr>
							</thead>
							<tbody>
								<% @categories.each do |category| %>
								<tr>
								<%if category.status == '有効'%>
									<th><%= link_to category.name, category_path(category)%></th>
								<% end %>
								</tr>

								<% end %>
							</tbody>
						</table>
				</div>
		</div>

        <div class="col-xs-10">	
	   <div>
		  <div style="display: flex; align-items: center;  width: 100%; height: 200px; padding: 150px;">

			 
    <p><%= attachment_image_tag @item, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
    <h2><%= @item.name %></h2><br>
    <h4><%= @item.text %></h4><br>
    <h4>¥<%= @item.price %>(税込)</h4><br>


    
				</div>
		 </div>


    <div style="float: right; padding: 20px;">
       
         <%= form_for(@cart, url:carts_path) do |f| %>
  	    <%= f.select :count,(1..10) %>
    	<%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit "カートに入れる", class:"btn btn-info" %>
        <% end %>
   

    </div>
    