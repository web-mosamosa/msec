<%= render 'admin/admin_header' %>
<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>会員ID</th>
					<th>氏名</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
					<th colspan="4"></th>
				</tr>
			</thead>
            <tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= user.id %></td>

					<td><%= link_to user.last_name+user.first_name, admin_user_path(user) %></td>

					<td><%= user.email %></td>
					<td><%= user.user_status %></td>
					
				</tr>
				<% end %>
			</tbody>
</table>