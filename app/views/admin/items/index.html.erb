<%= render 'admin/admin_header' %>
<h2>商品一覧画面</h2>
<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
					<th colspan="5"></th>
				</tr>
			</thead>
            <tbody>
				<% @items.each do |item| %>
				<tr>
					<td><%= item.id %></td>
					<td><%= link_to item.name,admin_item_path(item) %>
					<td><%= item.price %></td>
					<td><%= item.category.name %></td>
					<td><%= item.sell_status %></td>
				</tr>
				<% end %>
			</tbody>
</table>