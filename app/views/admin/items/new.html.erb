<h2>商品　新規登録画面</h2>

<%= form_for [:admin, @item] do |f| %>
	<%= f.label :name, "商品名　" %>
	<%= f.text_field :name %><br>
	<%= f.label :text, "商品説明　" %>
	<%= f.text_area :text %><br>
	<%= f.label :price, "税抜価格" %>
	<%= f.text_field :price %><br>
	<%= f.label :sell_status, "販売ステータス" %>
	<%= f.text_field :sell_status %><br>
	<%= f.label :image %>
	<%= f.attachment_field :profile_image, class: "item_image" %>

	<%= f.submit "新規登録", class: "btn btn-primary" %>
<% end %>