<%= render 'admin/admin_header' %>
<div class="col-md-8 col-md-offset-2">
<h2>商品　編集画面</h2>

<%= form_for [:admin, @item] do |f| %>
	<%= f.label :name, "商品名　" %>
	<%= f.text_field :name %><br>
	<%= f.label :text, "商品説明　" %>
	<%= f.text_area :text %><br>
	<%= f.label :category_id, "ジャンル" %>
  <%= f.collection_select :category_id, Category.all, :id, :name %><br>
	<%= f.label :price, "税抜価格" %>
	<p><%= f.text_field :price %>円</p><br>
	<%= f.label :sell_status, "販売ステータス" %>
	<%= f.select :sell_status, [["販売中", "販売中"], ["販売停止中", "販売停止中"]] %><br>
	<%= f.label :image %>
	<%= f.attachment_field :profile_image, class: "item_image" %>

	<%= f.submit "変更を保存", class: "btn btn-primary" %>
<% end %>
</div>