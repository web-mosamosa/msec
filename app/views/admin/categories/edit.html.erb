<%= render 'admin/admin_header' %>
<div class="col-md-8 col-md-offset-2">
<body>
<h1>ジャンル編集画面</h1>

<%= form_for(@category,url: admin_category_path(@category) ) do |f| %>
    <h4>ジャンル</h4>
    <%= f.text_field :name %>
  
    <%= f.radio_button :status, '有効' %>有効
    <%= f.radio_button :status, '退会済み' %>退会済み


    <%= f.submit '更新を保存する' , class: "btn btn-primary"%>
<% end %>
</body>
</div>