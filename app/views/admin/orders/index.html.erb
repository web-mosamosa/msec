<%= render 'admin/admin_header' %>
<div class="col-md-8 col-md-offset-2">
<h2>注文履歴一覧画面</h2>
 <table class="table table-bordered">
  <thead>
   <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
   </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
   <tr>
    <th><%= link_to order.created_at, admin_order_path(order.id) %></th>
    <th><%= order.user.last_name %> <%= order.user.first_name %></th>
    <th><%= order.order_items.sum(:count) %></th>
    <th><%= order.order_status %></th>
   </tr>
  </tbody>
  <% end %>
</table>
</div>