<h2>登録情報編集</h2>

<%= form_for(@user) do |f| %>

<% if @user.errors.any? %>
	<h3><%= @user.errors.count %>error occurrence</h3>
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>

<table class="table table-hover table-inverse">
  <tbody>
   <tr>
    <td>名前</td>
    <td>
    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "name" %>
    </div>
    </td>
    <td>
    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "name" %>
    </div>
    </td>
   </tr>
   <tr>
    <td>フリガナ</td>
    <td>
    <div class="field">
      <%= f.label :last_name_kana %>
      <%= f.text_field :last_name_kana, class: "name" %>
    </div>
    </td>
    <td>
    <div class="field">
      <%= f.label :first_name_kana %>
      <%= f.text_field :first_name_kana, class: "name" %>
    </div>
    </td>
   </tr>
   <tr>
    <td>メールアドレス</td>
    <td>
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, class: "email" %>
    </div>
    </td>
   </tr>
   <tr>
    <td>郵便番号（ハイフンなし）</td>
    <td>
    <div class="field">
      <%= f.label :postcode %>
      <%= f.text_field :postcode, class: "postcode" %>
    </div>
    </td>
   </tr>
   <tr>
    <td>住所</td>
    <td>
    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address, class: "address" %>
    </div>
    </td>
   </tr>
   <tr>
    <td>電話番号（ハイフンなし）</td>
    <td>
    <div class="field">
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: "phone_number" %>
    </div>
    </td>
   </tr>

<div class="actions">
	<%= f.submit "編集内容を保存する" %>
</div>

<% end %>