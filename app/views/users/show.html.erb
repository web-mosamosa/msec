  <%= render 'users/ura_header' %>

   

<div class="col-xs-9">

	<h2>マイページ</h2>

  <h3>登録情報</h3>
  <p><%= link_to "編集する", edit_user_path(@user), class: "btn btn-block btn-default glyphicon" %></p>
  <%= link_to "パスワード再設定", new_user_password_path(@user), class: "btn btn-block btn-default glyphicon" %>
	<table class="table table-hover table-inverse">
		<tbody>
			<tr>
				<td>氏名</td>
				<td>
				<%= @user.last_name %>
				<%= @user.first_name %>
				</td>
			</tr>
      <tr>
      	<td>カナ</td>
      	<td>
				<%= @user.last_name_kana %>
				<%= @user.first_name_kana %>
				</td>
      </tr>
      <tr>
      	<td>郵便番号</td>
      	<td><%= @user.postcode %></td>
      </tr>
      <tr>
      	<td>住所</td>
      	<td><%= @user.address %></td>
      </tr>
      <tr>
      	<td>電話番号</td>
      	<td><%= @user.phone_number %></td>
      </tr>
      <tr>
      	<td>メールアドレス</td>
      	<td><%= @user.email %></td>
      </tr>

		</tbody>
	</table>

	</div>