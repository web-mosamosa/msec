<%= render 'admin/admin_header' %>
<h1>ジャンル編集画面</h1>

<%= form_for(@categories, url:"/categories/#{@categories.id}") do |f| %>
    <h4>ジャンル</h4>
    <%= f.text_field :name %>
  
    <%= f.radio_button :status, '有効' %>有効
    <%= f.radio_button :status, '無効' %>無効


    <%= f.submit '更新を保存する' %>
<% end %>