

<h1>ジャンル追加・一覧画面</h1>
<!-- form_for部分 -->
<%= form_for(@new_categories) do |f| %>
    <h4>ジャンル</h4>
    <%= f.text_field :name %>
    <input type="radio" name="status" value="effectiveness">有効
    <input type="radio" name="status" value="invalid">無効
    <%= f.submit '追加' %>
<% end %>



<table class="table">
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @category.each do |category| %>
		　<tr>
			<th><%= category.name %></th>
			<th></th>
			<th><%= link_to "編集する", "/categories/:id/edit" %>
			</th>
		　</tr>
		<% end %>
	</tbody>
</table>